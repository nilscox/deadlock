{
  "include": ["src/**/*"],
  "files": ["vite.config.ts"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "es2022",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["vitest/globals"]
  }
}
