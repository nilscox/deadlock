{
  "include": ["src"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "es2022",
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node"
  }
}
